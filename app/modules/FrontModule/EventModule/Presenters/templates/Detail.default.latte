{block content}
<div class="container">
    <div class="pull-right">
        <a n:if="$user->isLoggedIn()" n:href=":Front:Event:AddSpeaker: $event->id" class="btn btn-success">
            Add speaker
        </a>
    </div>
	<div class="container event-detail">
		<div class="jumbotron event-info">
			<h1>{$event->name}</h1>
			<h2>{$event->date|date:"Y-m-d"}</h2>
		</div>
		{control awardForm}
	</div>
</div>
